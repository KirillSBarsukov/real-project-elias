<!--
  Step 1: The form must be sharable between the new and edit views.
-->

<form action="<%= (typeof actionPath === 'undefined') ? '/resources' : actionPath %>", method="POST">
  <% if (typeof actionPath !== 'undefined') { %>
    <input type="hidden" name="id" value="<%= formData.id %>">
  <% } %>


  <div class="form-group">
    <label for="phoneNumber">Phone Number</label>
    <input type="number" name="phoneNumber" class="form-control" value="<%= formData.phoneNumber %>"/>
  </div>

  <div class="form-group">
    <label for="contactType">Please submit the property you are intested in. And how do you want to be contacted</label>
    <textarea name="contactType" class="form-control summernote">
      <%= formData.contactType %>
    </textarea>
  </div>

  <div class="form-group">
    <button class="btn btn-dark">Submit</button>
  </div>
</form>



</div>